{
  "manifest_version": 3,
  "name": "KaTeX Direction Extension",
  "version": "1.0",
  "description": "Adds direction: auto to KaTeX elements.",
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chat.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.com/*"
      ],
      "css": ["styles.css"]
    }
  ]
}
