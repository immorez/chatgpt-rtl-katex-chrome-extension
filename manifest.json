{
  "manifest_version": 3,
  "name": "Add dir='auto' to KaTeX (ChatGPT Only)",
  "version": "1.0",
  "description": "Adds dir='auto' to all elements with the class 'katex-display' on ChatGPT.",
  "permissions": [],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chat.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
